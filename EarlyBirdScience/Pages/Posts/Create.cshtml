@page
@model EarlyBirdScience.Pages.Posts.CreateModel

<h4>PostModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostModel.Title" class="control-label"></label>
                <input asp-for="PostModel.Title" class="form-control" />
                <span asp-validation-for="PostModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostModel.Subtitle" class="control-label"></label>
                <input asp-for="PostModel.Subtitle" class="form-control" />
                <span asp-validation-for="PostModel.Subtitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PostModel.Published" /> @Html.DisplayNameFor(model => model.PostModel.Published))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PostModel.PublishDate" class="control-label"></label>
                <input asp-for="PostModel.PublishDate" class="form-control" />
                <span asp-validation-for="PostModel.PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PostModel.CommentsEnabled" /> @Html.DisplayNameFor(model => model.PostModel.CommentsEnabled))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PostModel.Content" class="control-label"></label>
                <input asp-for="PostModel.Content" class="form-control" />
                <span asp-validation-for="PostModel.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
